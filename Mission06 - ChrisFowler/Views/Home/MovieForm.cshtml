
@{
    ViewData["Title"] = "Movies";
}

@model NewMovie

<h1>Movies</h1>

<form method="post">
    <input type="hidden" asp-for="MovieId" />

    <label asp-for="CategoryId">Category</label>
    <select asp-for="CategoryId">
        <option value="">Select a Category</option>
        @foreach (Categories c in ViewBag.ViewCategory)
        {
            <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select>
    <br /><br />

    <label asp-for ="Title">Title*</label>
    <input asp-for="Title" />
    <br /><br />

    <label asp-for="Year">Year*</label>
    <input asp-for="Year" />
    <br /><br />

    <label asp-for="Director">Director*</label>
    <input asp-for="Director" />
    <br /><br />

    <label asp-for="Rating">Rating*</label>
    <select asp-for="Rating">
        <option value="" selected disabled hidden>Select an option</option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
        <option value="NR">NR</option>
        <option value="TV-14">TV-14</option>
        <option value="UR">UR</option>
        <option value="TV-PG">TV-PG</option>
        <option value="TV-Y7">TV-Y7</option>
    </select>
    <br /><br />

    <label asp-for="Edited">Edited</label>
    <select asp-for="Edited">
        <option value="false">No</option>
        <option value="true">Yes</option>
    </select>
    <br /> <br />

    <label asp-for="LentTo">Lent To</label>
    <input asp-for="LentTo" />
    <br /><br />

    <label asp-for="CopiedToPlex">Copied to Plex</label>
    <select asp-for="CopiedToPlex">
        <option value="false">No</option>
        <option value="true">Yes</option>
    </select>
    <br /><br />

    <label asp-for="Notes">Notes</label>
    <textarea asp-for="Notes" maxlength="25"></textarea>
    <br /><br />

    <button type="submit">Submit</button>

    <div asp-validation-summary="All" style="font-style:italic; text-align: left; font-size: 12px; margin-top:20px;"></div>
</form>

